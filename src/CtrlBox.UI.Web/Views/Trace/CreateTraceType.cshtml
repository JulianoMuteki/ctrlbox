@model CtrlBox.Application.ViewModel.TraceTypeVM

@{
    ViewData["Title"] = "CreateTraceType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section cssViews{
    <link href="~/plugins/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" type="text/css" />
}
@section scriptsViews{
    <script type="text/javascript" src="~/plugins/bootstrap-fileupload/bootstrap-fileupload.js"></script>
}
<div class="page-content">
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Address</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Index</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create</a></li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-plus"></i>New BoxType</div>
                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <form asp-action="CreateTraceType" enctype="multipart/form-data" asp-controller="Trace" class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">Description</label>
                                <div class="controls">
                                    <input id="rua" type="text" name="Description" placeholder="Description" class="m-wrap large" />
                                    <span class="help-inline">Description</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Type Trace</label>
                                <div class="controls">
                                    <select id="ddlTypeTrace" class="span6 select2_option" data-placeholder="Choose a Type Trace" name="TypeTrace" asp-for="TypeTrace"><option value="1">Place</option><option value="2">State</option></select>
                                </div>
                            </div>
                            <partial name="~/Views/PartialsSections/_ViewUploadPicture.cshtml" />
                            <div class="form-actions">
                                <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
    <!-- END PAGE CONTAINER-->
</div>


