@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    jQuery(document).ready(function () {

        var url = '@Url.Content("~/Delivery/AjaxHandlerEntregas")';

        var oTable = $('#tbClientes').dataTable({
            bJQueryUI: false,
            "sPaginationType": "full_numbers",
            "sAjaxSource": url,
            "bProcessing": true,
            "bAutoWidth": false,
            "bDestroy": true,
            "aoColumns": [
                        {
                            "mData": null,
                            //  sClass: "checkboxCell",
                            "sType": "html",
                            "bSortable": false,
                            sClass: "calc",
                            "mRender": function (data, type, row) {
                                if (type === 'display') {
                                    var url = '@Url.Action("ExecutarEntrega", "Delivery")?entregaID=' + data.DT_RowId + '&linhaID=' + data.RouteID;
                                    return '<a href="'+ url + '" class="glyphicons no-js search"><i></i></a>';
                                }
                                return data;
                            }
                        },
                        {
                            "mData": "RouteVM.Name",
                            "defaultContent": "<i>Not set</i>"
                        },
                        {
                            "mData": "CreatedBy"
                        },
                        {
                            "mData": "FinalizedBy"
                        },
                        {
                            "mData": "DtStart"
                        },
                        {
                            "mData": "DtEnd"
                        },
                        {
                            "mData": "IsFinalized"
                        }

            ]
        });
    });
</script>

