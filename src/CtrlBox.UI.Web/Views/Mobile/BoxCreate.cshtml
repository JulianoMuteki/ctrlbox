@model CtrlBox.Application.ViewModel.BoxVM

@{
    ViewData["Title"] = "BoxCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section cssViews{
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="~/plugins/select2/select2_metro.css" />
    <link href="~/plugins/bootstrap-switch/static/stylesheets/bootstrap-switch-metro.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/bootstrap-switch/static/stylesheets/bootstrap-switch.css" rel="stylesheet" />

    <!-- END PAGE LEVEL STYLES -->
}
@section scriptsViews{
    <partial name="~/Views/PartialsSections/_ScriptsTable.cshtml" />

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script type="text/javascript" src="~/plugins/select2/select2.min.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="~/plugins/bootstrap-switch/static/js/bootstrap-switch.js" type="text/javascript"></script>

}

<script type="text/javascript">

    jQuery(document).ready(function () {
        $('.select2_option').select2({
            allowClear: true
        });
        $(".switch").bootstrapSwitch();

        $('.switch').on('switch-change', function (e, data) {
            var $el = $(data.el)
              , value = data.value;
            console.log(e, $el, value);
        });


        var oTableBarcodes = $('#tbBarcodes').dataTable({
            "bProcessing": true,
            "bDestroy": true,
            "bFilter": false,
            "aoColumns": [
                        {
                            "mData": null,
                            "mRender": function (data, type, row, meta) {
                                return meta.row + meta.settings._iDisplayStart + 1;
                            }
                        },
                        {
                            "mData": "Barcode"
                        }
            ]
       });

      

        $('#addGenerateBarcodes').on('click', function () {
            $.ajax({
                url: '../Mobile/GetAjaxHandlerListBarcodes',
                type: 'GET',
                dataType: 'json',
                data: { quantity: $('#txtTotalBoxes').val() },
                "success": function (object) {
                    if (object != undefined) {
                        var list = object.aaData;
                        var tb = [];
                       
                        list.forEach(function (entry) {                        
                            tb.push({
                                "Barcode": entry
                            });
                        });

                        oTableBarcodes.fnAddData(tb);
                    }
                },
                "error": handleAjaxError
            });
        });

        $('#addRow').on('click', function () {
                  oTableBarcodes.fnAddData({
                "Barcode": "352637247246"
            });
        });
    });
</script>
<div class="page-content">
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Address</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Index</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create</a></li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-plus"></i>Data load box</div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form asp-action="Create" asp-controller="Box" class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">Box type</label>
                                <div class="controls">
                                    <select id="ddlBoxesType" class="span6 select2_option" data-placeholder="Choose a box type" tabindex="1" name="BoxTypeID" asp-for="BoxTypeID" asp-items="@((List<SelectListItem>)ViewData["BoxesType"])"><option value="0">Please select box</option></select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Description</label>
                                <div class="controls">
                                    <input type="text" name="Description" placeholder="Description" class="m-wrap large" />
                                    <span class="help-inline">Description</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Generate barcode</label>
                                <div class="controls">
                                    <div class="switch">
                                        <input type="checkbox" checked class="toggle" />
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Barcode</label>
                                <div class="controls">
                                    <input type="text" name="Barcode" placeholder="Barcode" class="m-wrap large" />
                                    <span class="help-inline">Barcode</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Total boxes</label>
                                <div class="controls">
                                    <input id="txtTotalBoxes" type="text" name="TotalBoxes" placeholder="Total Boxes" class="m-wrap large" />
                                    <span class="help-inline">create total boxes</span>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button id="addGenerateBarcodes" type="button" class="btn green">start read tags</button>
                                <button id="addRow" type="button" class="btn green">add tag</button>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box purple">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-bookmark"></i>boxes</div>
                    </div>
                    <div class="portlet-body">
                        <table id="tbBarcodes" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nº</th>
                                    <th>Barcode</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->

    </div>
    <!-- END PAGE CONTAINER-->
</div>



