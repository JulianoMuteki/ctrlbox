@model CtrlBox.UI.Web.Models.Role.RoleViewModel

@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1029px !important">
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Security</a>
                        <i class="icon-angle-right"></i>
                    </li>
                    <li>
                        <a href="#">Rule</a>
                        <i class="icon-angle-right"></i>
                    </li>
                    <li><a href="#">AssignRoleToUser</a></li>
                </ul>
                <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span6">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Assign Role To User</div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form asp-controller="Role" asp-action="AssignRoleToUser" class="form-horizontal">
                            <div class="control-group">
                                <label>Users</label>
                                <select name="UserSelected" asp-for="UserSelected" asp-items="@Model.AllUsers" class="form-control"> <option>Please select one</option></select>
                            </div>
                            <div class="control-group">
                                <label>Roles</label>
                                <select name="RoleSelected" asp-for="RoleSelected" asp-items="@Model.AllRoles" class="form-control"> <option>Please select one</option></select>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn blue">Save</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
    <!-- END PAGE CONTAINER-->
</div>

