@{
    ViewData["Title"] = "Clients";
}

@section scriptsViews
    {
    <partial name="~/Views/PartialsSections/_ScriptsTable.cshtml" />
}
<script src="~/scripts/tb-client.js"></script>
<script src="~/scripts/appCtrlBox.js"></script>
<script type="text/javascript" src="~/plugins/select2/select2.min.js"></script>

<script type="text/javascript">
    jQuery(document).ready(function () {
        var url = '@Url.Content("~/Client/AjaxHandlerGet")';

        TableEditable.init(url);
    });
</script>

@Html.Hidden("editUrl", Url.Action("Client/Index"))

<partial name="~/Views/PartialsSections/_ViewModalAddress.cshtml" />
<!-- BEGIN PAGE -->
<div class="page-content">
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <div id="portlet-config" class="modal hide">
        <div class="modal-header">
            <button data-dismiss="modal" class="close" type="button"></button>
            <h3>portlet Settings</h3>
        </div>
        <div class="modal-body">
            <p>Here will be a configuration form</p>
        </div>
    </div>
    <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Client</a>
                        <i class="icon-angle-right"></i>
                    </li>
                    <li>
                        <a href="#">Index</a>
                    </li>
                </ul>
                <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-edit"></i>List all clients</div>
                        <div class="actions">
                            <a asp-action="Create" class="btn green"><i class="icon-plus"></i>  Add Client</a>
                            <a asp-action="OptionsTypes" class="btn purple"><i class="icon-plus"></i>  Options Types</a>
                        </div>
                    </div>
                    <div class="portlet-body no-more-tables">
                        <table id="sample_editable_1" class="table-bordered table-striped table-condensed cf">
                            <thead class="cf">
                                <tr>
                                    <th>Name</th>
                                    <th>QuantityBoxes</th>
                                    <th>BalanceDue</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Contact</th>
                                    <th>SaleIsFinished</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>Price products</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER-->
</div>
<!-- END PAGE -->
