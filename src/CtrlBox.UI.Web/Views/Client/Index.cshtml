
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<script type="text/javascript">



    jQuery(document).ready(function () {


        var url = '@Url.Content("~/Home/AjaxHandlerClientes")';

        var oTable = $('#tbClientes').dataTable({
            bJQueryUI: false,
            "sPaginationType": "full_numbers",
            "sAjaxSource": url,
            "bProcessing": true,
            "bAutoWidth": false,
            "bDestroy": true,
            "aoColumns": [

                                {
                                    "mData": "Nome"
                                },

                                {
                                    "mData": "TotalCaixa"
                                },
                                {
                                    "mData": "SaldoDevedor"
                                },
                                {
                                    data: null,
                                    "sType": "html",
                                    "bSortable": false,
                                    render: function (data, type, row) {
                                        if (type === 'display') {
                                            var url = '@Url.Action("ValorPorProduto", "Home")?clienteID=' + data.DT_RowId;
                                            return '<a href="' + url + '"><i class="icon-money"></i> cotação</a>';
                                        }
                                        return data;
                                    }
                                },
                                {
                                    data: null,
                                    "sType": "html",
                                    "bSortable": false,
                                    sClass: "calc",
                                    render: function (data, type, row) {
                                        if (type === 'display') {
                                            var url = '@Url.Action("AssociarContatos", "Home")?clienteID=' + data.DT_RowId;
                                            return '<a href="' + url + '"><i class="icon-random"></i> Vincular</a>';
                                        }
                                        return data;
                                    }
                                },
                                 {
                                     data: null,

                                     render: function (data, type, row) {
                                         if (type === 'display') {

                                             return '<a class="excluir" id="' + data.DT_RowId + '" href="#"><i class="icon-trash"></i> Delete</a>';
                                         }
                                         return data;
                                     }
                                 }
            ]
        });
    });
</script>

