@model CtrlBox.Application.ViewModel.BoxTypeVM

@{
    ViewData["Title"] = "CreateBoxType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section cssViews{
    <link href="~/plugins/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" type="text/css" />
}
@section scriptsViews{
    <script type="text/javascript" src="~/plugins/bootstrap-fileupload/bootstrap-fileupload.js"></script>
}
<div class="page-content">
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Address</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Index</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create</a></li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-plus"></i>New BoxType</div>
                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <form asp-action="CreateBoxType" asp-controller="Box" enctype="multipart/form-data" class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">Name</label>
                                <div class="controls">
                                    <input id="cep" type="text" name="Name" placeholder="Name" class="m-wrap medium" />
                                    <span class="help-inline">Name</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Description</label>
                                <div class="controls">
                                    <input id="rua" type="text" name="Description" placeholder="Description" class="m-wrap large" />
                                    <span class="help-inline">Description</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Lenght</label>
                                <div class="controls">
                                    <input type="text" name="Lenght" placeholder="Lenght" class="m-wrap large" />
                                    <span class="help-inline">Lenght</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Height</label>
                                <div class="controls">
                                    <input type="text" name="Height" placeholder="Height" class="m-wrap large" />
                                    <span class="help-inline">Height</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Width</label>
                                <div class="controls">
                                    <input type="text" name="Width" placeholder="Width" class="m-wrap large" />
                                    <span class="help-inline">Width</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">LengthUnit</label>
                                <div class="controls">
                                    <select class="span6 select2_option" data-placeholder="Choose a Length" id="LengthUnit" name="LengthUnit" asp-for="LengthUnit" asp-items="@((List<SelectListItem>)ViewData["OptionsBoxLengthUnit"])"></select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">MaxProductsItems</label>
                                <div class="controls">
                                    <input type="text" name="MaxProductsItems" placeholder="MaxProductsItems" class="m-wrap large" />
                                    <span class="help-inline">MaxProductsItems</span>
                                </div>
                            </div>
                            <partial name="~/Views/PartialsSections/_ViewUploadPicture.cshtml" />
                            <div class="form-actions">
                                <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
    <!-- END PAGE CONTAINER-->
</div>

