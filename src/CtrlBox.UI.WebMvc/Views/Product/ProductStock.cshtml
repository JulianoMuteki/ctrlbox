
@{
    ViewBag.Title = "ProductStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
 
                    var url = '@Url.Content("~/Product/AjaxHandlerProductStock")';

                    var oTable = $('#tbProdutos').dataTable({
                        "bPaginate": false,
                        "bAutoWidth": false,
                        "sAjaxSource": url,
                        bFilter: false, bInfo: false,
                        "bDestroy": true,
                        "aoColumns": [
                                            {
                                                "mData": "Product.Name",
                                                "bSortable": false
                                            },
                                            {
                                                "mData": null,
                                                "sType": "html",
                                                "bSortable": false,
                                                sClass: "calc",
                                                "mRender": function (data, type, row) {
                                                    if (type === 'display') {
                                                        return '<input type="text" placeholder="0" value="' + row.Amount + '" class="m-wrap small amount"></input>';
                                                    }
                                                    return data;
                                                }
                                            }
                        ]
                    });            


        $("#btnSubmit").click(function () {

            var oTable = $('#tbProdutos').dataTable();
            var tb = [];
            $.each(oTable.fnGetNodes(), function (index, value) {
                var row = oTable.fnGetData(value);
                row.Amount = $(value).find('input.amount').val();
                tb.push(row);
            });
            var myJsonString = JSON.stringify(tb);
            var linhaValor = $("select#mainSelect").val();


            $.ajax({
                url: '@Url.Content("~/Product/SubmitProductStock")',
                type: 'POST',
                dataType: 'json',
                data: { tbProdutos: myJsonString, linha: linhaValor },
                "success": function (json) {
                    if (!json.NotAuthorized) {
                        alert('Completo');
                        window.history.go(-1);
                    }
                }
               // "error": handleAjaxError
            });
            event.preventDefault();

            return true;
        });

    });

</script>


