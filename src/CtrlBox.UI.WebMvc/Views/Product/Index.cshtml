@model IEnumerable<CtrlBox.UI.WebMvc.Models.ProdutoVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    jQuery(document).ready(function () {
        var url = '@Url.Content("~/Product/AjaxHandlerGet")';

        var oTable = $('#tbProduct').dataTable({
            bJQueryUI: false,
            "sPaginationType": "full_numbers",
            "sAjaxSource": url,
            "bProcessing": true,
            "bAutoWidth": false,
            "bDestroy": true,
            "aoColumns": [
                            {
                                "mData": "Name"
                            },
                            {
                                "mData": "Weight"
                            },
                            {
                                "mData": "Description"
                            },
                            {
                                data: null,
                                "sType": "html",
                                "bSortable": false,
                                sClass: "calc",
                                render: function (data, type, row) {
                                    if (type === 'display') {
                                        var url = '@Url.Action("Edit", "Product")?clienteID=' + data.DT_RowId;
                                        return '<a href="' + url + '"><i class="icon-random"></i> Editar</a>';
                                    }
                                    return data;
                                }
                            },
                            {
                                data: null,
                                render: function (data, type, row) {
                                    if (type === 'display') {

                                        return '<a class="excluir" id="' + data.DT_RowId + '" href="#"><i class="icon-trash"></i> Delete</a>';
                                    }
                                    return data;
                                }
                            }
            ]
        });
    });
</script>


