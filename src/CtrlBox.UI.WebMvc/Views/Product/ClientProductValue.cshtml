@model CtrlBox.UI.WebMvc.Models.ClienteVM

@{
    ViewBag.Title = "ClientProductValue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
        @{ var clienteID = Model.DT_RowId;

           }
    jQuery(document).ready(function () {

        $('#btnSubmit').click(function () {

            var oTableAdicionar = $('#tbValorPorProduto').dataTable();
            var sData = oTableAdicionar.$('input').serialize();
            alert(sData);
            $.ajax({
                url: '@Url.Content("~/Product/SubmitValorPorProduto")',
                type: 'POST',
                dataType: 'json',
                data: { clienteID: '@clienteID', lista: sData },
                "success": function (json) {
                    if (!json.NotAuthorized) {
                        alert('Completo');
                    }
                }
            });

            return false;

        });

        var url = '@Url.Content("~/Product/AjaxHandlerValorPorProduto")?clienteID=' + '@clienteID';

        var oTable = $('#tbValorPorProduto').dataTable({
            "sAjaxSource": url,
            "bPaginate": false,
            "bAutoWidth": false,
            bFilter: false, bInfo: false,
            "aoColumns": [
                        {
                            "mData": "NomeProduto",
                            "bSortable": false
                        },
                        {
                            "mData": null,
                            "sType": "html",
                            "bSortable": false,
                            sClass: "calc",
                            "mRender": function (data, type, row) {
                                if (type === 'display') {
                                    return '<input type="text" placeholder="' + row.Valor + '" class="m-wrap small" name="' + row.DT_RowId + '" />'
                                    }
                                return data;
                            }
                        }
            ]
        });
    });
</script>

