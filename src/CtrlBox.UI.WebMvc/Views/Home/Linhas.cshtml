@{
    ViewBag.Title = "Linhas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">



    jQuery(document).ready(function () {


        var url = '@Url.Content("~/Home/AjaxHandlerLinhas")';

        var oTable = $('#tbLinhas').dataTable({
            bJQueryUI: false,
            "sAjaxSource": url,
            "aoColumns": [
                           
                            {
                                "mData": "Nome"
                            },
                            {
                                "mData": "DistanciaKM"
                            },
                            {
                                "mData": "Tempo"
                            },
                            {
                                "mData": "Caminhao"
                            },
                             {
                                 data: null,
                                 "sType": "html",
                                 "bSortable": false,
                                 sClass: "calc",
                                 render: function (data, type, row) {
                                     if (type === 'display') {
                                         var url = '@Url.Action("AssociarClientes", "Home")?linhaID=' + data.DT_RowId;
                                         return '<a href="' + url + '"><i class="icon-random"></i> Vincular clientes</a>'; icon - random
                                     }
                                     return data;
                                 }
                             },
                              {
                                  data: null,

                                  render: function (data, type, row) {
                                      if (type === 'display') {
                                        
                                          return '<a class="excluir" id="' + data.DT_RowId + '" href="#"><i class="icon-trash"></i> Delete</a>';
                                      }
                                      return data;
                                  }
                              }
            ]
        });

    });
</script>

