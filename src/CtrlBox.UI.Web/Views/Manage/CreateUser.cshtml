@model CtrlBox.UI.Web.Models.Manage.RegisterViewModel

@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1029px !important">
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Account</a>
                        <i class="icon-angle-right"></i>
                    </li>
                    <li>
                        <a href="#">Register</a>
                    </li>
                </ul>
                <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="span3">
                    <ul class="ver-inline-menu tabbable margin-bottom-10">
                        <li class="active">
                            <a data-toggle="tab" href="#tab_1-1">
                                <i class="icon-cog"></i>
                                Personal info
                            </a>
                            <span class="after"></span>
                        </li>
                        <li><a data-toggle="tab" href="#tab_2-2"><i class="icon-picture"></i> Change Avatar</a></li>
                        <li><a data-toggle="tab" href="#tab_3-3"><i class="icon-lock"></i> Change Password</a></li>
                        <li><a data-toggle="tab" href="#tab_4-4"><i class="icon-eye-open"></i> Privacity Settings</a></li>
                    </ul>
                </div>
                <div class="span9">
                    <div class="tab-content">
                        <div id="tab_1-1" class="tab-pane active">
                            <div style="height: auto;" id="accordion1-1" class="accordion collapse in">
                                @if (Model.IdUser == Guid.Empty)
                                {
                                    <form asp-route="CreateUser" method="post">
                                        <label asp-for="FirstName" class="control-label">First Name</label>
                                        <input asp-for="FirstName" type="text" placeholder="John" class="m-wrap span8">
                                        <label asp-for="LastName" class="control-label">Last Name</label>
                                        <input asp-for="LastName" type="text" placeholder="Doe" class="m-wrap span8">
                                        <label asp-for="PhoneNumber" class="control-label">Mobile Number</label>
                                        <input asp-for="PhoneNumber" type="text" placeholder="19-99999-9999" class="m-wrap span8">
                                        <label asp-for="Email" class="control-label">E-mail</label>
                                        <input asp-for="Email" type="text" placeholder="E-mail" class="m-wrap span8">
                                        <label asp-for="Password" class="control-label">Password</label>
                                        <input asp-for="Password" type="password" placeholder="Password" class="m-wrap span8">
                                        <label asp-for="ConfirmPassword" class="control-label">Re-type Your Password</label>
                                        <input asp-for="ConfirmPassword" type="password" placeholder="Re-type Your Password" class="m-wrap span8">
                                        <div>
                                            <button type="submit" class="btn green">Register</button>
                                            <a href="#" class="btn">Cancel</a>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="UpdateUser" asp-controller="Manage" method="post">
                                        <input type="hidden" asp-for="IdUser" />
                                        <label asp-for="FirstName" class="control-label">First Name</label>
                                        <input asp-for="FirstName" type="text" placeholder="John" class="m-wrap span8">
                                        <label asp-for="LastName" class="control-label">Last Name</label>
                                        <input asp-for="LastName" type="text" placeholder="Doe" class="m-wrap span8">
                                        <label asp-for="PhoneNumber" class="control-label">Mobile Number</label>
                                        <input asp-for="PhoneNumber" type="text" placeholder="19-99999-9999" class="m-wrap span8">
                                        <div class="submit-btn">
                                            <button type="submit" class="btn green">Update</button>
                                            <a href="#" class="btn">Cancel</a>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                        <div id="tab_2-2" class="tab-pane">
                            <div style="height: auto;" id="accordion2-2" class="accordion collapse in">
                            </div>
                        </div>
                        <div id="tab_3-3" class="tab-pane">
                            <div style="height: auto;" id="accordion3-3" class="accordion collapse in">
                                <form asp-route="ChangePassword" method="post">
                                    <label class="control-label">Current Password</label>
                                    <input type="password" class="m-wrap span8">
                                    <label class="control-label">New Password</label>
                                    <input type="password" class="m-wrap span8">
                                    <label class="control-label">Re-type New Password</label>
                                    <input type="password" class="m-wrap span8">
                                    <div class="submit-btn">
                                        <a href="#" class="btn green">Change Password</a>
                                        <a href="#" class="btn">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div id="tab_4-4" class="tab-pane">
                            <div style="height: auto;" id="accordion4-4" class="accordion collapse in">

                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="portlet box red">
                                            <div class="portlet-title">
                                                <div class="caption"><i class="icon-reorder"></i>Roles</div>
                                                <div class="tools">
                                                    <a href="javascript:;" class="collapse"></a>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <ul>
                                                    @foreach (var item in Model.RolesToUsersVM.AllRoles)
                                                    {
                                                        <li>@item.Text</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <div class="portlet box red">
                                            <div class="portlet-title">
                                                <div class="caption"><i class="icon-reorder"></i>Claims</div>
                                                <div class="tools">
                                                    <a href="javascript:;" class="collapse"></a>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <ul>
                                                    @foreach (var item in Model.RolesToUsersVM.AllClaims)
                                                    {
                                                        <li>@item.Text</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end span9-->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
    <!-- END PAGE CONTAINER-->
</div>

